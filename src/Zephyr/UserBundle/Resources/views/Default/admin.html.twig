{% extends '::base.html.twig' %}

{% block body %}
	{% if error is defined %}
		<div class="alert alert-dismissible alert-danger">
	  		<button type="button" class="close" data-dismiss="alert">×</button>
	  		<p>{{ error }}</p>
		</div>
	{% endif %}
	{% if success is defined %}
		<div class="alert alert-dismissible alert-success">
	  		<button type="button" class="close" data-dismiss="alert">×</button>
	  		<p>{{ success }}</p>
		</div>
	{% endif %}
	<div class="row">
		<h1>Jobs en ligne</h1>
		{% for i in job %}
			{% if i.valid != 0 and i.done == 0 and i.expire == 0 %}
				<div class="col-md-4 col-sm-6">
					<div class="jobs">
						<a href="{{ path('zephyr_job_edit', {id:i.id}) }}">
							<div id="ticket">
								<br>
								<h4 style="margin:10px;"><b>{{ i.title }}</b></h4>
								<p style="margin:10px;">{{ i.category }}</p><br>
								<p style="margin:10px;">{{ i.shortcontent }}<p>
							</div>
						</a>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div><br><br>
	<div class="row">
		<h1>Jobs en attente de validation</h1>
		{% for j in job %}
			{% if j.valid == 0 and j.done == 0 and j.expire == 0 %}
				<div class="col-md-4 col-sm-6">
					<div class="jobs">
						<a href="{{ path('zephyr_job_edit', {id:j.id}) }}">
							<div id="ticket">
								<br>
								<h4 style="margin:10px;"><b>{{ j.title }}</b></h4>
								<p style="margin:10px;">{{ j.category }}</p><br>
								<p style="margin:10px;">{{ j.shortcontent }}<p>
							</div>
						</a>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div><br><br>
	<div class="row">
		<h1>Jobs fermés ou expirés</h1>
		{% for l in job %}
			{% if l.done != 0 or l.expire != 0 %}
				<div class="col-md-4 col-sm-6">
					<div class="jobs">
						<a href="{{ path('zephyr_job_edit', {id:l.id}) }}">
							<div id="ticket">
								<br>
								<h4 style="margin:10px;"><b>{{ l.title }}</b></h4>
								<p style="margin:10px;">{{ l.category }}</p><br>
								<p style="margin:10px;">{{ l.shortcontent }}<p>
							</div>
						</a>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div><br><br>
{% endblock %}
