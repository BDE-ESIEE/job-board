{% extends '::base.html.twig' %}

{% block body %}
	{% if error is defined %}
		<div class="alert alert-dismissible alert-danger">
	  		<button type="button" class="close" data-dismiss="alert">×</button>
	  		<p>{{ error }}</p>
		</div>
	{% endif %}
	{% if success is defined %}
		<div class="alert alert-dismissible alert-success">
	  		<button type="button" class="close" data-dismiss="alert">×</button>
	  		<p>{{ success }}</p>
		</div>
	{% endif %}
	<div class="row">
		<h1>Jobs en ligne</h1>
		{% for i in job %}
			{% if i.valid != 0 and i.done == 0 and i.expire == 0 %}
				<div class="col-md-4 col-sm-6">
					<div class="jobs">
						<a href="{{ path('zephyr_admin_edit', {id:i.id}) }}">
							<div id="ticket">
								<br>
								<h4><b>{{ i.title }}</b></h4>
								<p>{{ i.category }}</p><br>
								<p>{{ i.shortcontent }}<p>
							</div>
						</a>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div><br><br>
	<div class="row">
		<h1>Jobs en attente de validation</h1>
		{% for j in job %}
			{% if j.valid == 0 and j.done == 0 and j.expire == 0 %}
				<div class="col-md-4 col-sm-6">
					<div class="jobs">
						<a href="{{ path('zephyr_admin_edit', {id:j.id}) }}">
							<div id="ticket">
								<br>
								<h4><b>{{ j.title }}</b></h4>
								<p>{{ j.category }}</p><br>
								<p>{{ j.shortcontent }}<p>
							</div>
						</a>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div><br><br>
	<div class="row">
		<h1>Jobs fermés</h1>
		{% for l in job %}
			{% if l.done != 0 %}
				<div class="col-md-4 col-sm-6">
					<div class="jobs">
						<a href="{{ path('zephyr_admin_edit', {id:l.id}) }}">
							<div id="ticket">
								<br>
								<h4><b>{{ l.title }}</b></h4>
								<p>{{ l.category }}</p><br>
								<p>{{ l.shortcontent }}<p>
							</div>
						</a>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div><br><br>
	<div class="row">
		<h1>Jobs expirés</h1>
		{% for m in job %}
			{% if m.valid != 0 and m.done != 0 and m.expire != 0 %}
				<div class="col-md-4 col-sm-6">
					<div class="jobs">
						<a href="{{ path('zephyr_admin_edit', {id:m.id}) }}">
							<div id="ticket">
								<br>
								<h4><b>{{ m.title }}</b></h4>
								<p>{{ m.category }}</p><br>
								<p>{{ m.shortcontent }}<p>
							</div>
						</a>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}
