{% extends '::base.html.twig' %}  

{% block body %}
	<img src="{{ asset('css/logo.png') }}" class="img-responsive" align="middle"></img>
	<br><br>
	<div class="compteur">
		<ul>
			<li>
				<p>{{ total }}<br><span>job{% if total != 1 %}s{% endif %}<br>en ligne</span></p>
			</li>
			<li>
				<p>{{ valid }}<br><span>offre{% if valid != 1 %}s{% endif %}<br>valid√©e{% if valid != 1 %}s{% endif %}</span></p>
			</li>
		</ul>
	</div>
	<br><br>
	<div class="row">
		{% for job in jobs %}
			{% if job.valid != 0 %}
				<div class="col-md-4 col-sm-6 col-sm">
					<div class="jobs">
						<a href="#">
							<div id="ticket">
								<br>
								<h4><b>{{ job.title }}</b></h4>
								<p>{{ job.category }}</p><br>
								{{ job.shortcontent }}
							</div>
						</a>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}